<script>
/* Floating emojis */
setInterval(()=>{
    const e=document.createElement("div");
    e.classList.add("float");
    e.innerHTML=["ğŸ’–","ğŸŒ¹","âœ¨","ğŸ’˜"][Math.floor(Math.random()*4)];
    e.style.left=Math.random()*100+"vw";
    e.style.fontSize=Math.random()*20+18+"px";
    document.body.appendChild(e);
    setTimeout(()=>e.remove(),7000);
},300);

/* Next section + music */
function next(){
    document.getElementById("rose").classList.remove("show");
    document.getElementById("question").classList.add("show");
    document.getElementById("music").play();
}

/* No button escape */
const no=document.getElementById("no");
no.addEventListener("mouseover",()=>{
    no.style.left=Math.random()*140-70+"px";
    no.style.top=Math.random()*140-70+"px";
});

/* Yes */
document.getElementById("yes").addEventListener("click",()=>{
    document.getElementById("question").classList.remove("show");
    document.getElementById("final").classList.add("show");
});
</script>

